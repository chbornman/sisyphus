# A list of devices you want to take the screenshots from
# These are the required screen sizes for App Store Connect
devices([
  "iPhone 15 Pro Max",      # 6.7" display (required)
  "iPhone 15 Pro",          # 6.1" display (required)
  "iPhone SE (3rd generation)", # 4.7" display (required)
  "iPad Pro (12.9-inch) (6th generation)", # 12.9" iPad (required)
  "iPad Pro (11-inch) (4th generation)"    # 11" iPad (required)
])

# Languages for screenshot localization
languages([
  "en-US"
])

# The name of the scheme which contains the UI Tests
scheme("Runner")

# Where should the resulting screenshots be stored?
output_directory("./fastlane/screenshots")

# Clear previous screenshots before creating new ones
clear_previous_screenshots(true)

# Set the status bar to 9:41 AM, and show full battery and reception
override_status_bar(true)

# Arguments to pass to the app on launch
# Use -FASTLANE_SNAPSHOT YES to detect when running in screenshot mode
launch_arguments([
  "-FASTLANE_SNAPSHOT YES"
])

# For more information about all available options run
# fastlane action snapshot
